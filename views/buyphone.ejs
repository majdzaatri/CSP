<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!------------------------------- CSS StyleSheet link ---------------------------->
    <link rel="stylesheet" media="all" type="text/css" href="/public/css/styles.css">

    <!------------------------------- Bootstrap CDN ---------------------------------->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
    </script>

    <!------------------------------- Font Awesome CDN -------------------------------->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">

    <title>dashboard</title>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-------------------- Sidebar ------------------->
        <ul class="navbar-nav bg-dark bg-gradient-primary sidebar sidebar-dark accordion collapse-inner collapse show"
            id="accordionSidebar">

            <!---------- Sidebar - Brand ------------>
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/dashboard">
                <div class="sidebar-brand-text mx-3">CSP</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading"> Buy </div>

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="">
                    <i class="fas fa-laptop"></i>
                    <span>PC</span></a>
                <a class="nav-link" href="/buy-cell-phone">
                    <i class="fas fa-mobile-alt"></i>
                    <span>Cell Phone</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading"> Purchases </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                    aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-shopping-cart"></i>
                    <span>My Purchases</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Cell Phone</h6>
                        <div class="row">
                            <div class="col-sm-3">
                                <img class="img-resposnsive" src="./public/css/images/Iphonex.png">
                            </div>
                            <div class="col-sm">
                                <p class="item-name">Iphone X </p>
                                <p class="item-p">Read more...</p>

                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <img class="img-resposnsive" src="./public/css/images/s10.jpg">
                            </div>
                            <div class="col-sm">
                                <p class="item-name">Galaxy S10</p>
                                <p class="item-p">Read more...</p>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <img class="img-resposnsive" src="./public/css/images/iphonexr.jpg">
                            </div>
                            <div class="col-sm">
                                <p class="item-name">Iphone XR</p>
                                <p class="item-p">Read more...</p>

                            </div>
                        </div>


                    </div>
                </div>
            </li>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-dark bg-dark topbar mb-4 shadow static-top justify-content-end">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3"
                        data-toggle="collapse" data-target="#accordionSidebar">
                        <i class="fa fa-bars"></i>
                    </button>

                    <div class="" id="">
                        <ul class="navbar-nav">
                            <li class="nav-item mr-3">
                                <a class="nav-link" href="/buy-cell-phone">Buy Cell Phone</a>
                            </li>
                            <li class="nav-item mr-5">
                                <a class="nav-link" href="">Buy PC</a>
                            </li>

                            <div class="topbar-divider d-none d-lg-block"></div>
                        </ul>
                    </div>

                    <div class="mr-1 ml-3">
                        <ul class="navbar-nav ml-auto">
                            <!-- Nav Item - User Information -->
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 ml-1 d-none d-lg-inline"><%= user %></span>
                                    <img class="img-profile rounded-circle"
                                        src="https://scontent.fsdv2-1.fna.fbcdn.net/v/t1.0-9/44536570_10217016452380949_4084243414340599808_o.jpg?_nc_cat=110&amp;_nc_sid=09cbfe&amp;_nc_ohc=vbp9lkJfA3oAX-koVQ3&amp;_nc_ht=scontent.fsdv2-1.fna&amp;oh=cf7f8a4631d09f9ffeb7de236851c4d9&amp;oe=5EE3C10C">
                                </a>

                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                    aria-labelledby=" ">
                                    <a class="dropdown-item" href="/profile">
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Profile
                                    </a>
                                    <a class="dropdown-item" href="/about">
                                        <i class="fas fa-info fa-sm fa-fw mr-2 text-gray-400"></i>
                                        About
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Logout
                                    </a>
                                </div>
                            </li>
                        </ul>

                    </div>
                </nav>
                <!-- End of Topbar -->

                <!------------------------ Begin Page Content --------------------------->
                <div class="container-fluid">
                    <div class="row">
                        <h1 class="ml-3">Buy Cell Phone:</h1>
                    </div>

                    <div class="row my-5">
                        <!------------------------ phones list --------------------------->
                        <div class="col-12 col-md-6 col-lg-3">
                            <div class="list-group" id="list-tab" role="tablist">

                                <% for(var i=0; i<phones.length ;i++){ %>
                                <a class="list-group-item list-group-item-action" id="list-phone<%= i %>-list"
                                    data-toggle="list" href="#phone<%= i %>-list" role="tab" aria-controls="iphoneX"
                                    onclick="Clicked('list-phone<%= i %>-list')">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <img class="img-resposnsive" src=<%= phones[i].src%>>
                                        </div>
                                        <div class="col-sm">
                                            <p class="item-name"><%= phones[i].id %></p>
                                            <p class="item-p"><%= phones[i].description %></p>
                                            <% if(phones[i].in_stock === 'true'){ %>
                                            <p class="item-p text-right text-success">In Stuck</p>
                                            <% } else { %>
                                            <p class="item-p text-right text-danger">Out of stuck</p>
                                            <% } %>
                                        </div>
                                    </div>
                                </a>
                                <% } %>

                            </div>
                        </div>
                        <!------------------------ End phones list ----------------------->
                        
                        <!------------------------ model and payment method ----------------------->
                        <div class="col-12 col-md-6 col-lg-7">
                            <!------------------------phones models --------------------------->
                            <div id="nothing-clicked" class="row justify-content-center">
                                <h1 class="text-center">CHOOSE YOUR PHONE</h1>
                            </div>
                            
                            <% for(var i=0; i<phones.length ;i++){ %>
                                <% if(phones[i].in_stock === 'true') {%>
                                    <div class="row mt-5" id="phone<%= i %>-list" style="display: none;">
                                        <div class="row justify-content-center">
                                            <h3 class="ml-3">Select model one of the <%= phones[i].models.length %> models </h3>
                                        </div>
                                        
                                         <div class="container mt-5">
                                             <div class="row justify-content-center">
                                                <% for(var j=0; j<phones[i].models.length ;j++){ %>
                                                  <a role="button">
                                                    <button class="col-10 bg-dark mr-2 mb-2 payment-box"
                                                        onclick="continuePay()">
                                                        <div class="h2 text-center text-light"><%= phones[i].models[j].type %>
                                                        </div>
                                                        <div class="h5 text-left text-light"><%= phones[i].models[j].text %>
                                                        </div>
                                                        <div class="h4 text-center text-danger"><%= phones[i].models[j].price %>
                                                        </div>
                                                    </button>
                                                  </a>
                                                  <% } %>
                                                </div>
                                            </div>
                                    </div>

                            <% } else { %>
                                <div class="row mt-5" id="phone<%= i %>-list" style="display: none;">
                                    <h1 class="text-center">coming soon</h1>
                                </div>
                                <% } %>
                            <% } %>
                            <!------------------------ End phones models --------------------------->

                            <!---------------- payment method form ------------------->
                            <!-- <div class="row mt-5 justify-content-center"> -->
                                <div class="row mt-5 justify-content-center ml-5" style="display: none;" id="payment-form">
                                    <div class="col-10 text-center ml-4">
                                        <h2>Checkout form</h2>
                                    </div>
                                    <div class="row justify-content-center mt-5 mr-5">
                                    <div class="col-8 order-md-5">
                                        <form class="needs-validation" novalidate>
                                            <div class="row">
                                                <div class="col-md-12 mb-6">
                                                    <label for="cc-name">Name on card</label>
                                                    <input type="text" class="form-control" id="cc-name" placeholder=""
                                                        required>
                                                    <div class="invalid-feedback">
                                                        Name on card is required
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 mb-6">
                                                    <label for="cc-number">Credit card number</label>
                                                    <input type="text" class="form-control" id="cc-number"
                                                        placeholder="" required>
                                                    <div class="invalid-feedback">
                                                        Credit card number is required
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="cc-expiration">Expiration</label>
                                                    <input type="text" class="form-control" id="cc-expiration"
                                                        placeholder="" required>
                                                    <div class="invalid-feedback">
                                                        Expiration date required
                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="cc-cvv">CVV</label>
                                                    <input type="text" class="form-control" id="cc-cvv" placeholder=""
                                                        required>
                                                    <div class="invalid-feedback">
                                                        Security code required
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="mb-4">
                                            <button class="btn btn-primary btn-lg btn-block" type="submit">Pay</button>
                                        </form>
                                    </div>
                                </div>
                                </div>
                            <!-- </div> -->
                            <!---------------- End payment method form ------------------->

                        </div>
                        <div class="col-2 col-md-4 col-lg-2 buy-pc-box d-md-block d-none">
                                <img class="img-resposnsive2 mb-3 img-fluid" src="./public/css/images/PC.png">
                                <div class="h5 text-center text-light">Buy PC now</div>
                                <div class="text-center">
                                    <button class="h4 text-center btn btn-primary">Buy now</button>
                                </div>
                        </div>
                    </div>

                </div>
                <!-- .container-fluid -->

            </div>
            <!-------------------------------- End of Main Content ------------------------->
            <!-- End of Content Wrapper -->
        </div>
        <!-- End of Page Wrapper -->



        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <form action="/logout" method="POST">
                            <button type="submit" class="btn btn-primary" href="login.html">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function Clicked(elementID) {

                var models = {};
                document.getElementById("nothing-clicked").style.display = "none";
                for (var i = 0; i < 4; i++) {
                    models["phone" + i] = document.getElementById("phone" + i + "-list");
                }

                var pay = document.getElementById('payment-form');

                for (var i = 0; i < 4; i++) {
                    if (elementID === "list-phone" + i + "-list") {
                        for (var j = 0; j < 4; j++) {
                            if (i === j) {
                                models["phone" + j].style.display = "block";
                            } else {
                                models["phone" + j].style.display = "none";
                            }
                        }
                    }
                }

                pay.style.display = "none";
            }

            function continuePay() {
                document.getElementById('payment-form').style.display = "block";
            }
        </script>

</body>

</html>