<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('header'); -%>
    <title>dashboard</title>
</head>

<body onload="validateInput()" id="page-top">
                <!------------------------ Begin Page Content --------------------------->
                <div class="container-fluid">
                    <!-------------------- Profile details ----------------------->
                    <div class="row">
                        <h1 class="ml-3">Profile details</h1>
                    </div>
                    <form action="/profileInfo" method="POST" class="needs-validation">
                        <div class="row ml-3 form-inline">
                            <div class="col-md-4 col-sm-5 mt-5">
                                <div class="row">
                                    <div class="form-inline">
                                        <h5 class="mr-5 text-dark">First name</h5>
                                        <div class="input-group ml-2 mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i
                                                        class="fa fa-address-card-o mr-3 text-dark"
                                                        style="font-size: 20px;"></i></div>
                                            </div>
                                            <input type="text" name="firstname" class="form-control"
                                                value=<%= userData.FirstName %>>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="form-inline">
                                        <h5 class="mr-5 text-dark">Last name</h5>
                                        <div class="input-group ml-2 mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i
                                                        class="fa fa-address-card-o mr-3 text-dark"
                                                        style="font-size: 20px;"></i></div>
                                            </div>
                                            <input type="text" name="lastname" class="form-control"
                                                value=<%= userData.LastName %>>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="form-inline">
                                        <h5 class="text-dark" style="margin-right: 12px;">Phone number</h5>
                                        <div class="input-group ml-2 mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-phone mr-3 text-dark"
                                                        style="font-size: 20px;" aria-hidden="true"></i></div>
                                            </div>
                                            <input type="text" name="phonenumber" class="form-control"
                                                value=<%= userData.PhoneNumber %>>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 mt-5 pl-md-5 divider">
                                <div class="row">
                                    <div class="form-inline">
                                        <h5 class="mr-2 text-dark">Country</h5>
                                        <div class="input-group ml-2 mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fas fa-globe-europe mr-3 text-dark"
                                                        style="font-size: 20px;"></i></div>
                                            </div>
                                            <input type="text" name="country" class="form-control"
                                                value=<%= userData.Country %>>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="form-inline">
                                        <h5 class="mr-4 text-dark">E-mail</h5>
                                        <div class="input-group ml-2 mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="far fa-envelope mr-3 text-dark"
                                                        style="font-size: 20px;"></i></div>
                                            </div>
                                            <input type="text" name="email" class="form-control"
                                                value=<%= userData.Email %>>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="form-inline">
                                        <h5 class="text-dark" style="margin-right: 42px;">City</h5>
                                        <div class="input-group ml-2 mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fas fa-city mr-3 text-dark"
                                                        style="font-size: 20px;"></i></div>
                                            </div>
                                            <input type="text" name="City" class="form-control" value=<%= userData.City %>>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 mt-5 pl-md-5 divider">
                                <div class="row">
                                    <div class="form-inline">
                                        <h5 class="mr-4 text-dark">Street</h5>
                                        <div class="input-group ml-2 mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fa fa-road mr-3 text-dark"
                                                        aria-hidden="true" style="font-size: 20px;"></i></div>
                                            </div>
                                            <input type="text" name="Street" class="form-control"
                                                value=<%= userData.Street %>>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="form-inline">
                                        <h5 class="text-dark">Zip code</h5>
                                        <div class="input-group ml-2 mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text"><i class="fas fa-mail-bulk mr-3 text-dark"
                                                        style="font-size: 20px;"></i></div>
                                            </div>
                                            <input type="text" name="Zipcode" class="form-control"
                                                value=<%= userData.ZipCode %>>
                                        </div>
                                    </div>
                                </div>
                                <div class="container pr-5 mt-4">
                                    <div class="form-inline pr-2 w-100">
                                        <button class="btn btn-secondary text-uppercase font-weight-bold col-md-10 col-12"
                                            type="submit">Update</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <% for(var j=0; j < (typeof messages != 'undefined' ? messages.length : 0); j++) { %>
                <div class="text-success"> <%= messages[j] %> </div>
                <% } %>
                <!--------------------End Profile details ----------------------->
                <hr>

                <div class="row ">
                    <!-------------------- Profile details ----------------------->
                    <div class="col-md-8 justify-content-end">
 
                        

                        <div class="row justify-content-end">
                            <form class="ml-5" action="/change-password" method="POST">

                                <div class="row justify-content-center">
                                <div class="mt-5">
                                    <h1 class="text-justify ml-3">Change password</h1>
                                </div>
                            </div>


                                <div class="form-label-group mt-5">
                                    <input type="password" id="oldPassword" name="oldPassword" class="form-control"
                                        placeholder="Old password" required>
                                    <label for="oldPassword"><i class="fas fa-lock" style="font-size: 20px;"></i>
                                        Old password</label>
                                </div>


                          

                                <div class="form-row mt-4">
                                    <div class="form-label-group col-md-6 col-sm">
                                        <input type="password" id="newPassword" name="newPassword" class="form-control"
                                            placeholder="New password" required>
                                        <label for="newPassword"><i class="fas fa-lock" style="font-size: 20px;"></i>
                                            New password</label>

                                    </div>
                                    <div class="form-label-group col-md-6 col-sm">
                                        <input type="password" id="confirmPass" name="confirmPass" class="form-control"
                                            placeholder="Old password" required>
                                        <label for="confirmPass"><i class="fas fa-lock" style="font-size: 20px;"></i>
                                            Confirm password</label>
                                    </div>


                                    <% if (typeof passwordchanged != 'undefined') { %>
                                    <div><%= passwordchanged %></div>
                                    <% } %>
                                    

                                </div>
                                <div class="row mt-3 justify-content-center">
                                    <button
                                        class="btn btn-secondary btn-block text-uppercase font-weight-bold sign-in-up-btn col-8"
                                        type="submit" id="changeBtn" style="height: 4rem;">Change password</button>
                                </div>
                                <div class="row mt-3 justify-content-center"></div>


                        </div>
                        </form>

                    </div>
                    <!--col end -->
                    <div class="mb-sm-5 mb-md-0 col-md-4 col-sm-12 align-self-center ">
                        <div class="container text-md-left text-sm-center pr-md-5">
                            <div class=" row" id="validation">
                    <passlength class="mt-2 row offset-sm-3">Password's length must be 6 at least </passlength><br>
                     <passmatch class="mt-2 row offset-sm-3">Password must match </passmatch><br>
                     <passnum class="mt-2 row offset-sm-3">Password must contain at least one number</passnum> 
                    </div>
                </div>
                </div>
                </div>
                <!--row end -->

            </div>



        </div>
        <!-- .container-fluid -->

    </div>
    <!-------------------------------- End of Main Content ------------------------->
    <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->



    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <form action="/logout" method="POST">
                        <button type="submit" class="btn btn-primary" href="login.html">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/public/javascript/profileValidation.js"></script>

    <script>
        function validateInput() {
            const firstname = document.getElementsByName('firstname');
            const lastname = document.getElementsByName('lastname');
            const phonenumber = document.getElementsByName('phonenumber');
            const country = document.getElementsByName('country');
            const email = document.getElementsByName('email');
            const City = document.getElementsByName('City');
            const Street = document.getElementsByName('Street');
            const Zipcode = document.getElementsByName('Zipcode');

            console.log(firstname[0].value)
            if (firstname[0].value) {
                jQuery(firstname).attr('required', '');
            }
            if (lastname[0].value) {
                jQuery(lastname).attr('required', '');
            }
            if (phonenumber[0].value) {
                jQuery(phonenumber).attr('required', '');
            }
            if (country[0].value) {
                jQuery(country).attr('required', '');
            }
            if (email[0].value) {
                jQuery(email).attr('required', '');
            }
            if (City[0].value) {
                jQuery(City).attr('required', '');
            }
            if (Street[0].value) {
                jQuery(Street).attr('required', '');
            }
            if (Zipcode[0].value) {
                jQuery(Zipcode).attr('required', '');
            }

            const formlabelgroup = document.getElementById('validation').parentElement;
            const passlength = formlabelgroup.querySelector('passlength').style.display = "none";
            const passnum = formlabelgroup.querySelector('passnum').style.display = "none";
            const passmatch = formlabelgroup.querySelector('passmatch').style.display = "none";

        }



    </script>

</body>

</html>