<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!------------------------------- CSS StyleSheet link ---------------------------->
    <link rel="stylesheet" media="all" type="text/css" href="/public/css/styles.css">

    <!------------------------------- Bootstrap CDN ---------------------------------->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
        </script>

    <!------------------------------- Font Awesome CDN -------------------------------->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">
    <link rel='shortcut icon' type='image/x-icon' href='../public/css/images/favicon.ico' />
    <title>dashboard</title>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-------------------- Sidebar ------------------->
        <ul class="navbar-nav bg-dark bg-gradient-primary sidebar sidebar-dark accordion collapse-inner collapse show"
            id="accordionSidebar">

            <!---------- Sidebar - Brand ------------>
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/dashboard">
                <div class="sidebar-brand-text mx-3">CSP</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading"> Buy </div>

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="/buy-pc">
                    <i class="fas fa-laptop"></i>
                    <span>PC</span></a>
                <a class="nav-link" href="/buy-cell-phone">
                    <i class="fas fa-mobile-alt"></i>
                    <span>Cell Phone</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading"> Purchases </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                    aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-shopping-cart"></i>
                    <span>My Purchases</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Cell Phone</h6>
                        <% if(purchases.length !== 0) { %>
                        <% for(var i=0; i<purchases.length ;i++){ %>
                        <div class="row">
                            <div class="col-sm-3">
                                <% for(var j=0; j<phones.length; j++) { %>
                                <% if(purchases[i].Product === phones[j].id) { %>
                                <img class="img-resposnsive" src=<%= phones[j].src %>>
                                <% } %>
                                <% } %>
                            </div>
                            <div class="col-sm">
                                <p class="item-name"><%= purchases[i].Product %></p>
                                <p class="item-p"><%=purchases[i].cnt%> units</p>
                            </div>
                        </div>
                        <% if(i+1 !== purchases.length){ %>
                        <hr>
                        <% } %>
                        <% } %>
                        <% } else { %>
                        <div class="row justify-content-center">
                            <div class="display-5">No purchases yet</div>
                        </div>
                        <% } %>

                    </div>
                </div>
            </li>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-dark bg-dark topbar mb-4 shadow static-top justify-content-end">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3"
                        data-toggle="collapse" data-target="#accordionSidebar">
                        <i class="fa fa-bars"></i>
                    </button>

                    <div class="" id="">
                        <ul class="navbar-nav">
                            <li class="nav-item mr-3">
                                <a class="nav-link" href="/buy-cell-phone">Buy Cell Phone</a>
                            </li>
                            <li class="nav-item mr-5">
                                <a class="nav-link" href="/buy-pc">Buy PC</a>
                            </li>

                            <div class="topbar-divider d-none d-lg-block"></div>
                        </ul>
                    </div>

                    <div class="mr-1 ml-3">
                        <ul class="navbar-nav ml-auto">
                            <!-- Nav Item - User Information -->
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 ml-1 d-none d-lg-inline"><%= user %></span>
                                    <img class="img-profile rounded-circle"
                                        src="https://scontent.fsdv2-1.fna.fbcdn.net/v/t1.0-9/44536570_10217016452380949_4084243414340599808_o.jpg?_nc_cat=110&amp;_nc_sid=09cbfe&amp;_nc_ohc=vbp9lkJfA3oAX-koVQ3&amp;_nc_ht=scontent.fsdv2-1.fna&amp;oh=cf7f8a4631d09f9ffeb7de236851c4d9&amp;oe=5EE3C10C">
                                </a>

                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                    aria-labelledby=" ">
                                    <a class="dropdown-item" href="/profile">
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Profile
                                    </a>
                                    <a class="dropdown-item" href="/about">
                                        <i class="fas fa-info fa-sm fa-fw mr-2 text-gray-400"></i>
                                        About
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Logout
                                    </a>
                                </div>
                            </li>
                        </ul>

                    </div>
                </nav>
                <!-- End of Topbar -->

                <!------------------------ Begin Page Content --------------------------->
                <div class="container-fluid">
                    <div class="row justify-content-center font-weight-bold">
                        <h1 class="ml-3" style="font-size: 5rem;">About</h1>
                    </div>

                    <div class="row justify-content-center mt-5">
                        <h2><u>HQ office address</u></h2>
                    </div>
                    <div class="row justify-content-center">
                        <h4>Karmiel, Ort Braude College</h4>
                    </div>
                    <div class="row justify-content-center">
                        <div id="map"></div>
                    </div>
                    <div class="row mt-5 justify-content-center">
                        <h2><u>E-mail</u></h2>
                    </div>
                    <div class="row justify-content-center">
                        <a href="mailto:csportbraude@hotmail.com"
                            style="font-size: 1.5rem;">csportbraude@hotmail.com</a>
                    </div>
                    <div class="row justify-content-center mt-5">
                        <h2><u>Website</u></h2>
                    </div>
                    <div class="row justify-content-center">
                        <a href="https://www.google.com" style="font-size: 1.5rem;">www.google.com</a>
                    </div>
                    <div class="row mt-5 ml-5 justify-content-center">
                        <div class="col-12 col-md-2 col-lg-2">
                            <button class="button" onclick="windowlocation.href = 'https://www.facebook.com';"
                                data-hover="Facebook">
                                <div><i class="fab fa-facebook" style="font-size: 3rem;"></i></div>
                            </button>

                        </div>
                        <div class="col-12 col-md-2 col-lg-2">
                            <button class="button" onclick="window.location.href = 'https://www.twitter.com';"
                                data-hover="Twitter">
                                <div><i class="fab fa-twitter" style="font-size: 3rem;"></i></div>
                            </button>
                        </div>
                        <div class="col-12 col-md-2 col-lg-2">
                            <button class="button" onclick="window.location.href = 'https://www.facebook.com';"
                                data-hover="Telegram">
                                <div><i class="fa fa-telegram" style="font-size: 3rem;"></i></div>
                            </button>
                        </div>
                    </div>
                    <div class="container-fluid col-sm-1">
                        <div class="row mb-2 justify-content-center">
                            <button onclick=" window.open('/public/files/privacy.pdf'); return true;" type="button"
                                class="btn btn-primary btn-block">
                                privacy policy
                            </button>

                        </div>
                        <div class="row mb-4 justify-content-center">
                            <button onclick=" window.open('/public/files/terms-of-use.pdf'); return true;" type="button"
                                class="btn btn-block btn-primary" data-toggle="modal" data-target="#staticBackdrop">
                                Terms of use
                            </button>
                        </div>
                    </div>
                </div>
                <!-- .container-fluid -->

            </div>
            <!-------------------------------- End of Main Content ------------------------->
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <form action="/logout" method="POST">
                            <button type="submit" class="btn btn-primary" href="login.html">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Initialize and add the map
            function initMap() {
                // The location of Uluru
                var uluru = { lat: 32.913894, lng: 35.282818 };
                // The map, centered at Uluru
                var map = new google.maps.Map(
                    document.getElementById('map'), { zoom: 15, center: uluru });
                // The marker, positioned at Uluru
                var marker = new google.maps.Marker({ position: uluru, map: map });
            }
        </script>
        <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB94xIXApRugxl7okJ-z0OYPEdpv3MyHGQ&callback=initMap">
            </script>
</body>

</html>